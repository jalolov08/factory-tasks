{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@zustand/*": [
        "src/zustand/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
    },
  }
}